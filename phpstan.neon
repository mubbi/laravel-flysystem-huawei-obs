# PHPStan configuration for Laravel Flysystem Huawei OBS Adapter
# @author  Mubbasher Ahmed <hello@mubbi.me>
# @link    https://mubbi.me
# @license MIT

parameters:
    level: 8
    paths:
        - src
        - tests
    excludePaths:
        - tests/Fixtures
        - tests/Integration
    checkMissingIterableValueType: true
    checkGenericClassInNonGenericObjectType: true
    treatPhpDocTypesAsCertain: false
    ignoreErrors:
        # keep clean; prefer fixing with proper extensions/stubs instead of blanket ignores
    tmpDir: .phpstan
    parallel:
        maximumNumberOfProcesses: 4 
    stubFiles:
        - stubs/IlluminateFilesystemAdapterMacros.stub
includes:
    - vendor/phpstan/phpstan-mockery/extension.neon
    - vendor/phpstan/phpstan-phpunit/extension.neon